<%= turbo_frame_tag task do %>
  <%= form_with model: task, url: [:toggle, task.project, task], html: { data: { controller: "task" } } do |f| %>
    <label id="<%= dom_id(task) %>" class="<%= task.completed? ? 'completed' : '' %>">
      <%= f.check_box :completed, { data: { action: "change->task#submit" } } %>
      <%= task.name %>
    </label>
  <% end %>
<% end %>
